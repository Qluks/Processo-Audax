<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SerieRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".control.SerieRegister">


    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginRight="24dp"
        android:background="@color/transparent"
        android:src="@drawable/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="135.4dp"
        android:layout_height="91.12dp"
        android:layout_marginTop="91dp"
        android:orientation="vertical"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/serieNova"
        style="@style/Edit_button_1"
        android:layout_width="303dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginTop="37.88dp"
        android:enabled="true"
        android:text="Cadastrar série nova"
        android:textSize="12.5dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo"
        />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20.64dp"
        android:background="@color/transparent"
        android:src="@drawable/back_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/add_serie"
        android:src="@drawable/add_serie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.98dp"
        android:layout_marginTop="55.88dp"
        app:layout_constraintRight_toLeftOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo"
        />

    <TextView
        android:id="@+id/register"
        android:layout_width="156dp"
        android:layout_height="15dp"
        android:layout_marginTop="27dp"
        android:textSize="12.5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Suas séries cadastradas:"
        app:layout_constraintTop_toBottomOf="@id/serieNova"
        app:layout_constraintStart_toStartOf="@id/serieNova"
         />

    <ImageButton
        android:id="@+id/image_1"
        android:src="@drawable/image_1"
        android:layout_width="91.11dp"
        android:layout_height="136.66dp"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@id/serieNova"
        app:layout_constraintStart_toStartOf="@id/serieNova"
        />

    <ImageButton
        android:id="@+id/image_2"
        android:src="@drawable/image_2"
        android:layout_width="91.11dp"
        android:layout_height="136.66dp"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="13.39dp"
        app:layout_constraintLeft_toRightOf="@id/image_1"
        app:layout_constraintTop_toBottomOf="@id/serieNova"
        />

    <ImageButton
        android:id="@+id/image_3"
        android:src="@drawable/image3"
        android:layout_width="91.11dp"
        android:layout_height="136.66dp"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="13.39dp"
        app:layout_constraintLeft_toRightOf="@id/image_2"
        app:layout_constraintTop_toBottomOf="@id/serieNova"
        />

    <ImageButton
        android:id="@+id/image_4"
        android:src="@drawable/image_4"
        android:layout_width="91.11dp"
        android:layout_height="136.66dp"
        android:layout_marginTop="16.36dp"
        app:layout_constraintStart_toStartOf="@id/serieNova"
        app:layout_constraintTop_toBottomOf="@id/image_1"
        />

    <ImageButton
        android:id="@+id/image_5"
        android:src="@drawable/image5"
        android:layout_width="91.11dp"
        android:layout_height="136.66dp"
        android:layout_marginTop="16.36dp"
        android:layout_marginLeft="13.39dp"
        app:layout_constraintLeft_toRightOf="@id/image_4"
        app:layout_constraintTop_toBottomOf="@id/image_1"
        />

    <ImageButton
        android:id="@+id/image_6"
        android:src="@drawable/image_6"
        android:layout_width="91.11dp"
        android:layout_height="136.66dp"
        android:layout_marginTop="16.36dp"
        android:layout_marginLeft="13.39dp"
        app:layout_constraintLeft_toRightOf="@id/image_5"
        app:layout_constraintTop_toBottomOf="@id/image_1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>